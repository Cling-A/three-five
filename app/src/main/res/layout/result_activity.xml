<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".tflite.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color6"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:background="@color/color6"
            android:backgroundTint="@color/color6"
            android:orientation="vertical"
            android:weightSum="3">

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/color7"
                android:text="사진보내기"
                android:textColor="@color/color6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sttBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/color7"
                android:text="사진에 음성으로 텍스트 추가"
                android:textColor="@color/color6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/recommendBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom|fill_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/color7"
                android:text="이 앱 친구에게 추천하기"
                android:textColor="@color/color6"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
