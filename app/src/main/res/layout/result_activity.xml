<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color6"
    tools:context=".tflite.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/photoRe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:text="촬영 결과"
            android:textColor="@color/color6"
            android:textSize="60sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_ex"
                android:padding="15sp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/sendphoto" />

            <ImageButton
                android:id="@+id/sttBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_ex"
                android:padding="15sp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/addtext" />

            <ImageButton
                android:id="@+id/recommendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_ex"
                android:padding="15sp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/share" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>